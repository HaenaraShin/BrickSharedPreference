<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_encrypt"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:text="@string/Encrypt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_decrypt"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_decrypt"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:text="@string/Decrypt"
        app:layout_constraintBottom_toTopOf="@id/tv_filename"
        app:layout_constraintLeft_toRightOf="@id/btn_encrypt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dip"
        android:text="@string/origin_file_name"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_data1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_encrypt" />

    <TextView
        android:id="@+id/tv_filename"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dip"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_data1"
        app:layout_constraintLeft_toRightOf="@id/tv_file"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_encrypt"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_data1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_margin="4dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_filename"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_data2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_margin="4dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_data1"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_data3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_margin="4dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_data2"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_data4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_margin="4dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_data3"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_data5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_margin="4dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_data4"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_enc_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dip"
        android:layout_marginTop="24dip"
        android:text="@string/encrypted_file_name"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_enc_data1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_data5" />

    <TextView
        android:id="@+id/tv_enc_filename"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dip"
        android:layout_marginTop="24dip"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_enc_data1"
        app:layout_constraintLeft_toRightOf="@id/tv_enc_file"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_data5"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_enc_data1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_margin="4dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enc_file"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_enc_data2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_margin="4dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enc_data1"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_enc_data3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_margin="4dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enc_data2"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_enc_data4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_margin="4dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enc_data3"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_enc_data5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_margin="4dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enc_data4"
        tools:text="@string/app_name" />

</androidx.constraintlayout.widget.ConstraintLayout>